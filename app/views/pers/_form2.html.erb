    <div id="error_explanation">
      <h2>Помилок: <%=@per.errors.count %>. Необхідно виправити наступне:</h2>   
   

      <ul>
      <% @per.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<table>
<tr>
<td width="10%"><p align="center"><i><b>Прізвище</b></i></td>

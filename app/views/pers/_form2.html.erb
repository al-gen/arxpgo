  </div>
  <div class="field">

    <td><p align="center"><i><b><%= f.text_field :name,  :size => 20  %></b></i></td>
  </div>

  <div class="field">

    <td><p align="center"><i><b><%= f.text_field :midname,  :size => 20  %></b></i></td>
